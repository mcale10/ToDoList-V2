<%- include("header") -%>

    <div class="bg"></div>

    <div class="star-field">
        <div class="layer"></div>
        <div class="layer"></div>
        <div class="layer"></div>


        <div class="box" id="heading">
            <h1>
                <%= listTitle %>
            </h1>
        </div>



        <div class="box">

            <% newListItems.forEach(function(item) { %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%=item._id %>" onchange="this.form.submit()">
                        <p>
                            <%=item.name%>
                        </p>
                    </div>
                    <input type="hidden" name="listName" value="<%=listTitle%>">
                </form>
                <% }); %>

                    <form class="item" action="/" method="post">
                        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                        <button type="submit" name="list" value="<%=listTitle%>">+</button>
                    </form>
        </div>

        <div class="box">
            <div class="item" style="display: flex; justify-content: center;">
                <form action="/newoldlist" method="post">
                    <input type="text" name="newoldlist" placeholder="Enter name of a new/old list" autocomplete="off" style="margin-bottom: 3px;">
                    <button type="submit" name="list" value="<%=listTitle%>">+</button>
                </form>
            </div>
        </div>


        <%- include("footer") -%>